node
{
   
 def mavenHome = tool name: "maven"
    stage('checkoutcode'){
        git credentialsId: 'a9b80a5d-3d4d-46f5-8992-ec636cd5b42c', url: 'https://github.com/bhargavrk/maven-web-application.git'
    }
    
    stage('build'){
        sh "${mavenHome}/bin/mvn clean package"
    }
    
    stage('sonarqubereport'){
        sh "${mavenHome}/bin/mvn sonar:sonar"
    }  
    
    stage('nexusrepo'){
        sh "${mavenHome}/bin/mvn deploy"
    }
    
    stage('deployintotomcat'){
        sshagent(['e1451a09-bb45-45a4-aa90-8d2f11521c7d']) {
    sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.9.35:/opt/apache-tomcat-9.0.70/webapps/"
            
        }

    }
}
