node
{
   
 def mavenHome = tool name: "maven"
    stage('checkoutcode'){
        git credentialsId: 'a9b80a5d-3d4d-46f5-8992-ec636cd5b42c', url: 'https://github.com/bhargavrk/maven-web-application.git'
    }
    
    stage('build'){
        sh "${mavenHome}/bin/mvn clean package"
    }
    
    stage('sonarqubereport'){
        sh "${mavenHome}/bin/mvn sonar:sonar"
    }  
    
    stage('nexusrepo'){
        sh "${mavenHome}/bin/mvn deploy"
    }
    
    stage('deployintotomcat'){
        sshagent(['4326762b-f418-4378-a880-a6fa889f4382']) {
    sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war root@43.205.207.112:/opt/apache-tomcat-9.0.75/webapps"
            
        }

    }
}
